  "scripts": {
    "build": "gulp",
    "watch": "gulp watch",
    "build:scss": "gulp scssTask",
    "build:ts": "gulp tsTask",
    "lint:ts": "eslint \"wp-content/themes/ill/assets/ts/*.ts\"",
    "lint:ts:fix": "eslint \"wp-content/themes/ill/assets/ts/*.ts\" --fix",
    "lint:scss": "stylelint \"wp-content/themes/ill/assets/**/*.scss\"",
    "lint:scss:fix": "stylelint \"wp-content/themes/ill/assets/**/*.scss\" --fix",
    "format": "prettier --check \"wp-content/themes/ill/assets/**/*.{ts,scss}\"",
    "format:fix": "prettier --write \"wp-content/themes/ill/assets/**/*.{ts,scss}\""
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
